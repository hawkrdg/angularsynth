// material custom themes
//
@import "app/synth/material/themes/brick-light.css"
// @import "app/synth/material/themes/teal-light.css"
// @import "../../../node_modules/@angular/material/prebuilt-themes/deeppurple-amber.css"

body
	width: 100%
	height: 100vh
	box-sizing: border-box
	margin: 0
	padding: 20px 0 0
	background: linear-gradient(to bottom right, #cc3300 0%, #442200 100%)

div
	margin: 0
	padding: 0
	box-sizing: border-box

.centered
	text-align: center

// scrollbars
//
:root, div
	scrollbar-width: auto
	scrollbar-color: var(--accent-color) rgba(0, 0, 0, 0.4)
::-webkit-scrollbar
	width: 16px
	height: 16px
::-webkit-scrollbar-track
	background-color: rgba(0, 0, 0, 0.4)
::-webkit-scrollbar-thumb
	background-color: var(--accent-color)
	border-radius: 4px

// indent <span> classes
//
.tab20
	display: inline-block
	width: 20px
.tab40
	display: inline-block
	width: 40px
.tab60
	display: inline-block
	width: 60px
.tab80
	display: inline-block
	width: 80px
